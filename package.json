{
  "name": "leasot",
  "description": "Parse and output TODOs and FIXMEs from comments in your files",
  "version": "6.6.2",
  "author": "Gilad Peleg <giladp007@gmail.com> (http://giladpeleg.com)",
  "bin": {
    "leasot": "./bin/leasot.js",
    "leasot-reporter": "./bin/leasot-reporter.js"
  },
  "dependencies": {
    "async": "^2.6.1",
    "chalk": "^2.4.1",
    "commander": "^2.17.1",
    "eol": "^0.9.1",
    "get-stdin": "^6.0.0",
    "globby": "^8.0.1",
    "json2xml": "^0.1.2",
    "lodash": "^4.17.10",
    "log-symbols": "^2.2.0",
    "strip-ansi": "^4.0.0",
    "text-table": "^0.2.0"
  },
  "devDependencies": {
    "eslint": "^5.4.0",
    "husky": "^1.0.0-rc.13",
    "jsdoc-to-markdown": "^4.0.1",
    "lint-staged": "^7.2.2",
    "mocha": "^5.2.0",
    "prettier": "^1.14.2",
    "should": "^13.2.3"
  },
  "engines": {
    "node": ">=6.4.0"
  },
  "files": [
    "index.js",
    "lib",
    "bin"
  ],
  "keywords": [
    "fixme",
    "todo",
    "comments",
    "list",
    "parse",
    "generator",
    "ci",
    "productivity",
    "automation"
  ],
  "license": "MIT",
  "main": "index.js",
  "repository": "pgilad/leasot",
  "scripts": {
    "test": "mocha -R spec './tests/*.js'",
    "lint": "eslint .",
    "prettier": "prettier --write '**/*.{js,yml}'",
    "prettier-check": "prettier --list-different '**/*.{js,yml}'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.yml": [
      "prettier --write",
      "git add"
    ],
    "*.js": [
      "prettier --write",
      "eslint",
      "git add"
    ]
  }
}
