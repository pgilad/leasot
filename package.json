{
  "name": "leasot",
  "description": "Parse and output TODOs and FIXMEs from comments in your files",
  "version": "11.5.0",
  "author": "Gilad Peleg <gilad@giladpeleg.com> (https://www.giladpeleg.com)",
  "bin": {
    "leasot": "./bin/leasot",
    "leasot-reporter": "./bin/leasot-reporter"
  },
  "dependencies": {
    "async": "^3.2.0",
    "chalk": "^4.1.0",
    "commander": "^6.2.1",
    "eol": "^0.9.1",
    "get-stdin": "^8.0.0",
    "globby": "^11.0.1",
    "json2xml": "^0.1.3",
    "lodash": "^4.17.20",
    "log-symbols": "^4.0.0",
    "strip-ansi": "^6.0.0",
    "text-table": "^0.2.0"
  },
  "devDependencies": {
    "@types/async": "^3.2.5",
    "@types/lodash": "^4.14.166",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.16",
    "@types/text-table": "^0.2.1",
    "gh-pages": "^3.1.0",
    "husky": "^4.3.6",
    "jsdoc-to-markdown": "^6.0.1",
    "lint-staged": "^10.5.3",
    "mocha": "^8.2.1",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "should": "^13.2.3",
    "ts-node": "^9.1.1",
    "typedoc": "^0.20.4",
    "typescript": "^4.1.3"
  },
  "engines": {
    "node": ">=10"
  },
  "files": [
    "dist",
    "bin"
  ],
  "keywords": [
    "fixme",
    "todo",
    "comments",
    "list",
    "parse",
    "generator",
    "ci",
    "productivity",
    "automation",
    "typescript",
    "prettier"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "repository": "pgilad/leasot",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "rimraf docs dist",
    "docs": "typedoc src/index.ts src/definitions.ts",
    "docs:publish": "gh-pages -m '[ci skip] Updates' -d docs",
    "predocs:publish": "npm run release:prepare",
    "prepublishOnly": "npm run release:prepare",
    "prettier": "prettier --write 'src/**/*.ts' 'tests/*.ts'",
    "prettier-check": "prettier --list-different 'src/**/*.ts' 'tests/*.ts'",
    "release:prepare": "npm run clean && npm run prettier && npm run build && npm run test && npm run docs",
    "test": "mocha --require ts-node/register -R spec './tests/*.ts'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.yml": [
      "prettier --write"
    ],
    "*.ts": [
      "prettier --write"
    ]
  }
}
